<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/register1.css" type="text/css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" />
</head>
<body>
  <nav class="navsh">
    <img class="logo" src="img/logozin.webp" alt="logo">
    <ul class="nav justify-content-end" id="navkh">
        <li class="nav-item"><a class="nav-link" href="/home">HOME</a></li>
        <li class="nav-item"><a class="nav-link" href="/details">DETAIL</a></li>
        <li class="nav-item"><a class="nav-link" href="/course">COURSE</a></li>
        <li class="nav-item"><a class="nav-link" href="/login">LOGIN</a></li>
        <li class="nav-item"><a class="nav-link active" href="/register">REGISTER</a></li>
      </ul>
  </nav>

  <div class="container">
    <div class="register">
      <div class="register_content">
        <h1 class="register_header">REGISTER NOW</h1>
        <hr>
        <!-- Registration Form -->
        <form action="/user/register" method="POST">
          <div class="mb-3">
            <label>First Name</label>
            <input type="text" class="form-control" name="firstname" required>
          </div>
          <div class="mb-3">
            <label>Last Name</label>
            <input type="text" class="form-control" name="lastname" required>
          </div>
          <div class="mb-3">
            <label>Email</label>
            <input type="email" class="form-control" name="email" required>
          </div>
          <div class="mb-3">
            <label>Password</label>
            <input type="password" class="form-control" name="password" required>
          </div>
          <div class="mb-3">
            <label>Confirm Password</label>
            <input type="password" class="form-control" name="ConfirmPassword" required>
          </div>
          <button type="submit" class="btn btn-outline-info">REGISTER</button>
        </form>

        <div class="or_continue">
          <p>Or Continue with</p>
          <!-- Google Login Button -->
          <a href="/auth/google" class="btn btn-outline-danger">
            <i style="color: white; font-size: 30px;" class="fa-brands fa-google"></i> Continue with Google
          </a>
          <!-- Facebook Login Button -->
          <a href="/auth/facebook" class="btn btn-outline-primary">
            <i style="color: white; font-size: 30px;" class="fa-brands fa-facebook"></i> Continue with Facebook
          </a>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
</body>
</html>
