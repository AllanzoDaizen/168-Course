<%- include('header') %>
    <h1 style="padding-top: 200px;">All Courses</h1>
<a href="/courses/create">Add New Course</a>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Author</th>
      <th>Price</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
  </thead>
  <% courses.forEach(course => { %>
    <tr>
      <td><%= course.id %></td>
      <td><%= course.title %></td>
      <td><%= course.description %></td>
      <td><%= course.author %></td>
      <td><%= course.price %></td>
      <td>
        <img src="<%= course.image %>" alt="<%= course.title %>" style="width: 200px;">
      </td>
      <td>
        <a href="/courses/edit/<%= course.id %>" class="btn btn-info btn-sm">Edit</a>
        <form action="/courses/delete/<%= course.id %>" method="POST" style="display: inline;">
          <button type="submit" onclick="return confirm('Are you sure you want to delete this course?')" class="btn btn-warning btn-sm">Delete</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
<%- include('footer') %>

