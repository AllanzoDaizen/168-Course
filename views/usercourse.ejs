<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/usercourse.css" type="text/css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" />
</head>
<body>
  <nav class="navsh">
    <img class="logo" src="img/logozin.webp" alt="logo">
    <ul class="nav justify-content-end" id="navkh">
        <li class="nav-item"><a class="nav-link" href="/home">HOME</a></li>
        <li class="nav-item"><a class="nav-link" href="/usercourse">COURSE</a></li>
        <li class="nav-item"><a class="nav-link" href="/login">LOGIN</a></li>
        <li class="nav-item">
          <a class="nav-link active" href="/register">REGISTER</a>
        </li>
    </ul>
  </nav>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <% courses.forEach(course => { %> 
      <div class="col-12 col-sm-6 col-md-4 col-lg-4 mb-5">
        <div class="card" style="width: 100%; height: auto">
          <img
            src="<%= course.image ? course.image : '/img/placeholder.png' %>"
            class="card-img-top"
            alt="<%= course.title %>"
            style="height: 200px; object-fit: cover"
          />
          <div class="card-body">
            <h5 class="card-title"><%= course.title %></h5>
            <p class="card-text"><%= course.description %></p>
            <p class="card-text">
                <strong>Author:</strong> <%= course.author %>
            </p>
            <p class="card-text" style="color: yellow;">
                <strong style="color: white;">Price:</strong> $<%= course.price %>
            </p>
            <% if (course.price == 0) { %>
              <!-- Free Course Button -->
              <button class="btn btn-success courseButton" data-title="<%= course.title %>" data-description="<%= course.description %>" data-price="<%= course.price %>" data-image="<%= course.image ? course.image : '/img/placeholder.png' %>" data-instructor="<%= course.author %>">Free</button>
            <% } else { %>
              <!-- Buy Now Button -->
              <button class="btn btn-primary courseButton" data-title="<%= course.title %>" data-description="<%= course.description %>" data-price="<%= course.price %>" data-image="<%= course.image ? course.image : '/img/placeholder.png' %>" data-instructor="<%= course.author %>">Buy Now</button>
            <% } %>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>

  <script>
    // Handle the redirection for Free or Buy Now button
    document.querySelectorAll('.courseButton').forEach(button => {
      button.addEventListener('click', function() {
        const title = this.getAttribute('data-title');
        const description = this.getAttribute('data-description');
        const price = this.getAttribute('data-price');
        const image = this.getAttribute('data-image');
        const instructor = this.getAttribute('data-instructor');

        window.location.href = `/coursedetails?title=${encodeURIComponent(title)}&description=${encodeURIComponent(description)}&price=${encodeURIComponent(price)}&image=${encodeURIComponent(image)}&instructor=${encodeURIComponent(instructor)}`;
      });
    });
  </script>

</body>
</html>
