<%- include('header') %>
<h1>Edit Course</h1>
<form action="/courses/edit/<%= course.id %>" method="POST">
  <label>Title: <input type="text" name="title" value="<%= course.title %>" required></label><br>
  <label>Description: <textarea name="description" required><%= course.description %></textarea></label><br>
  <label>Author: <input type="text" name="author" value="<%= course.author %>" required></label><br>
  <label>Price: <input type="number" name="price" value="<%= course.price %>" required></label><br>
  <label>Image URL: <input type="text" name="image" value="<%= course.image %>" required></label><br>
  <button type="submit">Update</button>
</form>
<%- include('footer') %>
